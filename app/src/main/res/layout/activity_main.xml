<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elipso.manualrater.MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/image_place_holder"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" />
        <!--android:layout_alignParentStart="true" />-->

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dip"
        android:text="@string/initial_label_text"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/uniqueIdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uniqueID"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/image_place_holder"
        android:layout_alignStart="@+id/image_place_holder"
        android:textColor="@color/gray"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/countView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:textColor="@color/gray"
        android:layout_alignBaseline="@+id/uniqueIdView"
        android:layout_alignBottom="@+id/uniqueIdView"
        android:layout_alignRight="@+id/image_place_holder"
        android:layout_alignEnd="@+id/image_place_holder" />


</RelativeLayout >
